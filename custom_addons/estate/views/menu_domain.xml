<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Action -->
    <record id="female_names" model="ir.actions.act_window">
        <field name="name">Female Kids</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[('gender','=','female'),('age','&lt;=',5)]</field>
        <!--
            While giving multiple domains default logical operator is AND. 
            To change it to OR preceed it with '|'
        <field name="domain">['|',('gender','=','female'),('age','&lt;=',5)]</field>
        -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create a new Female Client
                </p>
            <p>
                    You must define a client entry.
                </p>
        </field>
    </record>

    <!-- Menu Item with action -->
    <menuitem id="menu_female_details" name="Female Kids" parent="menu_property_master" action="female_names" sequence="1" />
</odoo>