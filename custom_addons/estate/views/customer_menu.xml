<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View -->
    <record id="view_customer_details_search" model="ir.ui.view">
        <field name="name">customer_details_search</field>
        <field name="model">customer.details</field>
        <field name="arch" type="xml">
            <search>
                <field name="customer_id"/>
                <field name="gender"/>
                <field name="appointment_time"/>
                <field name="birth_date"/>
                <field name="age"/>
            </search>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_customer_details_tree" model="ir.ui.view">
        <field name="name">customer_details_tree</field>
        <field name="model">customer.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_id"/>
                <field name="gender"/>
                <field name="appointment_time"/>
                <field name="birth_date"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_details_form" model="ir.ui.view">
        <field name="name">customer_details_form</field>
        <field name="model">customer.details</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="customer_id"/>
                        <field name="gender"/>
                        <field name="birth_date"/>
                        <field name="age"/>
                    </group>
                    <group>
                        <field name="appointment_time"/>
                    </group>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="customer_action" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.details</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create a new Customer
                </p>
            <p>
                    You must select customer form Many2one drop down list.
                </p>
        </field>
    </record>

    <!-- Menu Item with action -->
    <menuitem id="menu_customer_details" name="Customer Details" parent="menu_estate_root" action="customer_action" sequence="1" />
</odoo>